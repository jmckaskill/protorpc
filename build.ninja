SRC_NINJA = src.ninja
INCLUDES = -I . -I gtest/googletest/include -I gtest/googletest
TOOLCHAIN_DIR = toolchain
SRC = .

include toolchain/host-clang.ninja

build toolchain/host/bin/protoc.exe: copy /usr/local/bin/protoc

subninja generate.ninja
subninja toolchain/target-clang-debug.ninja
subninja toolchain/target-clang-release.ninja

build check: phony clang-debug/check clang-release/check
default clang-debug clang-release check
